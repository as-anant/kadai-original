<header class="mb-4">
  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">At That Time</a>
    
    <% if logged_in? %>
      <div class="d-inline-flex justify-content-end">
        
      <%= form_with url: search_posts_path, method: :get, local: true do |f| %>
        <div class="form-inline">
          <%= f.text_field :content, class: 'form-control mr-sm-2', placeholder: 'Search' %>
          <%= f.submit :search, class: 'btn btn-outline-success my-2 my-sm-0' %>
        </div>
      <% end %>
        
        <a class="nav-link" href="<%= user_path(current_user) %>"><img class="mr-2 rounded" src="<%= gravatar_url(current_user, { size: 40 }) %>" alt=""></a>
        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
          <div class="btn-group" role="group">
            <button id="btnGroupDrop1" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Menu
            </button>
            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
              <li class="dropdown-item"><%= link_to 'Favorites', favs_user_path(current_user) %></li>
              <li class="dropdown-divider"></li>
              <li class="dropdown-item"><%= link_to 'Log out', logout_path, method: :delete %></li>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
  </nav>
</header>